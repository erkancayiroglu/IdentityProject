@model AppRole
<div class="container">
	<h2>Edit Role</h2>
	<br />
	<form asp-controller="Roles" asp-action="Edit" method="post">

		<div asp-validation-summary="All" class="text-danger"></div>
		<input name="Id" type="hidden" value="@Model.Id" />
		<div class="mb-3">
			<label asp-for="Name"></label>
			<input asp-for="Name" class="form-control" />
		</div>


		<button type="submit" class="btn btn-primary">Kaydet</button>

	</form>

	<table class="table">
		<thead>
			<tr>
				<td>Id</td>
				<td>Name</td>
				<td>Email</td>
				<td style="width:80px;"></td>

			</tr>
		</thead>
		<tbody>
			@if (ViewBag.Users != null)
			{
				@if (ViewBag.Users.Count == 0)
				{
					<tr><td colspan="4" class="text-center">User Yok</td></tr>
				}
				@foreach (var user in ViewBag.Users)
				{
					<tr>
						<td>@user.Id</td>  <!-- Burada Displayde olutyorö-->
						<td>@user.UserName</td>
						<td>@user.Email</td>
						<td>
							<a asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Edit</a>

						</td>

					</tr>

				}

			}

		</tbody>


	</table>




</div>
