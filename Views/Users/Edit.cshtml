@model EditViewModel
<div class="container">
    <h2>User Create</h2>
    <br />
    <form asp-action="Edit" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>

        <!-- ID Gizli Alan (name ile) -->
        <input type="hidden" name="id" value="@Model.Id" />

        <div class="mb-3">
            <label for="userName">Full Name</label>
            <input type="text" name="UserName" value="@Model.UserName" class="form-control" id="userName" />
        </div>

        <div class="mb-3">
            <label for="email">Email</label>
            <input type="email" name="Email" value="@Model.Email" class="form-control" id="email" />
        </div>
        <div class="card">
            <div class="card-header">
                Parola Güncelle
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label for="password">Password</label>
                    <input type="password" name="Password" class="form-control" id="password" />
                </div>

                <div class="mb-3">
                    <label for="confirmPassword">Confirm Password</label>
                    <input type="password" name="ConfirmPassword" class="form-control" id="confirmPassword" />
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header">
                Roller
            </div>
            <div class="card-body">

                @foreach (var role in ViewBag.Roles)
                {
                    <div class="form-check">
                        <input type="checkbox"
                               name="SelectedRoles"
                               id="@role"
                               value="@role"
                               class="form-check-input"
                        @(Model.SelectedRoles != null && Model.SelectedRoles.Contains(role) ? "checked" : "") />

                        <label class="form-check-label" for="@role">@role</label>
                    </div>
                }


            </div>
            <button type="submit" class="btn btn-primary">Kaydet</button>
    </form>

</div>
