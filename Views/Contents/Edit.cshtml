@model AppContent
<div class="container">

    <form asp-controller="Contents" asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

        <div class="mb-3">
            <label class="form-label" asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="input-group mb-3">
            <input type="file" name="imageFile" id="imageFile" class="form-control" />
        </div>
        <div>
            <img src="~/img/@Model.Image" alt="" style="width:100px" />
            <input type="hidden" asp-for="@Model.Image" />
        </div>

        <div class="mb-3">
            <label class="form-label" asp-for="Body"></label>
            <textarea asp-for="Body" class="form-control"></textarea>
            <span asp-validation-for="Body" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Güncelle</button>
    </form>
</divc>
