@model AppContent
<div class="container">
	<form asp-controller="Contents" asp-action="Create" method="post" enctype="multipart/form-data">
		<!--File bilgi göndermek içim-->

		<div asp-validation-summary="All"></div>

		<div class="row">
			<div class="col-12">
				<h1>Content Create</h1>

				<form action="Create" method="post">
					<div class="text-danger" asp-validation-summary="ModelOnly"></div>
					<div class="mb-3">
						<label class="form-label" asp-for="Title"></label>
						<input asp-for="Title" class="form-control" />
						<span asp-validation-for="Title" class="text-danger"></span>
					</div>


					<div class="input-group mb-3">
						<input type="file" name="imageFile" id="imageFile" class="form-control" />
					</div>
					<div class="mb-3">
						<label class="form-label" asp-for="Body"></label>
						<textarea asp-for="Body" class="form-control"></textarea>
						<span asp-validation-for="Body" class="text-danger"></span>
					</div>
					<button class="btn btn-primary">
						Create
					</button>
				</form>
			</div>
		</div>
	</form>

</div>
